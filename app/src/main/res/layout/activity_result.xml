<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ResultActivity">

    <com.google.android.material.card.MaterialCardView
        app:cardElevation="10dp"
        android:id="@+id/notcard2"
        android:layout_marginTop="75dp"
        app:cardCornerRadius="24dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="375dp">
        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card2"
                app:strokeColor="@color/text_color_secondery"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/correctt"
                        android:padding="15dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/kgprimary"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card3"
                app:strokeColor="@color/text_color_secondery"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/wrongt"
                        android:padding="15dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/kgprimary"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card4"
                app:strokeColor="@color/text_color_secondery"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">
                    <ImageView
                        android:id="@+id/resultImage"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_smile_face"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_below="@id/resultImage"
                        android:id="@+id/resultInfo"
                        android:padding="15dp"
                        android:textSize="22sp"
                        android:fontFamily="@font/kgprimary"
                        android:gravity="center"
                        android:textColor="@color/text_color_secondery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        app:cardElevation="10dp"
        android:id="@+id/notcard1"
        app:cardCornerRadius="24dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:fontFamily="@font/kgprimary"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@drawable/gradient_result"
            android:gravity="center"
            android:text="Quiz Done"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_result"
        android:id="@+id/returnHome"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/kgprimary"
            android:gravity="center"
            android:id="@+id/resultTextview"
            android:text="Return to Homepage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</RelativeLayout>